<div class="text-center">
    <div class="row">
        <div class="col align-self-center"> WHAT WE HEAR </div>
    </div>
    <div class="row">
        <div class="col align-self-center"> Reviews from our valuable customers </div>
    </div>
    <div class="row">
        <div class="col align-self-center">
            <div class="row">
                {{#userProfiles}}
                <div class="card lg-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src={{avatar}} class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-lg-6">
                            <div class="card-body">
                                <h5 class="card-title text-start">{{name}}</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary text-start">{{company}}</h6>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <a href={{profileUrl}}><img src="..." class="img-fluid rounded-start" alt="..."> </a>
                        </div>
                    </div>
                    <div class="row">
                        <p class="card-text text-start">{{comment}}</p>
                    </div>
                </div>
                {{/userProfiles}}
            </div>
        </div>
    </div>
</div>