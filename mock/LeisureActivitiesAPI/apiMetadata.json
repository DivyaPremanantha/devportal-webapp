{
    "apiInfo": {
        "apiName": "LeisureActivitiesAPI",
        "openApiDefinition": {
            "openapi": "3.0.1",
            "info": {
              "title": "Leisure Activities API",
              "description": "API for retrieving information about leisure activities and managing reservations",
              "version": "1.0.0"
            },
            "servers": [
              {
                "url": "https://stoplight.io/mocks/leisure/leisure/413770065",
                "description": "Main (production) server"
              },
              {
                "url": "https://stoplight.io/mocks/leisure/leisure/413770065",
                "description": "Staging server"
              }
            ],
            "paths": {
              "/activities": {
                "get": {
                  "summary": "Get a list of leisure activities",
                  "description": "Retrieve a list of leisure activities in the specified city based on search criteria",
                  "parameters": [
                    {
                      "in": "query",
                      "name": "city",
                      "schema": {
                        "type": "string"
                      },
                      "required": true,
                      "description": "The name of the city to search activities in",
                      "example": "New York"
                    },
                    {
                      "in": "query",
                      "name": "category",
                      "schema": {
                        "type": "string"
                      },
                      "description": "The category of the activities (e.g., sports, entertainment, wellness)",
                      "example": "sports"
                    },
                    {
                      "in": "query",
                      "name": "min_price",
                      "schema": {
                        "type": "number",
                        "format": "float"
                      },
                      "description": "Minimum price for the activity",
                      "example": 10
                    },
                    {
                      "in": "query",
                      "name": "max_price",
                      "schema": {
                        "type": "number",
                        "format": "float"
                      },
                      "description": "Maximum price for the activity",
                      "example": 100
                    },
                    {
                      "in": "query",
                      "name": "min_rating",
                      "schema": {
                        "type": "number",
                        "format": "float"
                      },
                      "description": "Minimum rating of the activities",
                      "example": 4
                    }
                  ],
                  "responses": {
                    "200": {
                      "description": "A list of leisure activities",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "array",
                            "items": {
                              "$ref": "#/components/schemas/Activity"
                            }
                          }
                        }
                      }
                    },
                    "400": {
                      "description": "Invalid parameters"
                    },
                    "500": {
                      "description": "Server error"
                    }
                  }
                }
              },
              "/activities/{id}": {
                "get": {
                  "summary": "Get details of a specific activity",
                  "description": "Retrieve detailed information about a specific leisure activity",
                  "parameters": [
                    {
                      "in": "path",
                      "name": "id",
                      "schema": {
                        "type": "string"
                      },
                      "required": true,
                      "description": "The ID of the activity",
                      "example": "act123"
                    }
                  ],
                  "responses": {
                    "200": {
                      "description": "Activity details",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/Activity"
                          }
                        }
                      }
                    },
                    "404": {
                      "description": "Activity not found"
                    },
                    "500": {
                      "description": "Server error"
                    }
                  }
                }
              },
              "/reservations": {
                "post": {
                  "summary": "Create a new activity reservation",
                  "description": "Make a reservation for a leisure activity",
                  "requestBody": {
                    "required": true,
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/NewReservation",
                          "examples": {
                            "example-1": {
                              "summary": "Standard reservation",
                              "value": {
                                "activity_id": "act123",
                                "guest_name": "John Doe",
                                "reservation_date": "2024-07-15",
                                "number_of_guests": 4,
                                "special_requests": "Near the stage"
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "responses": {
                    "201": {
                      "description": "Reservation created",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/Reservation"
                          }
                        }
                      }
                    },
                    "400": {
                      "description": "Invalid request"
                    },
                    "500": {
                      "description": "Server error"
                    }
                  }
                }
              },
              "/reservations/{id}": {
                "get": {
                  "summary": "Get details of a specific reservation",
                  "description": "Retrieve detailed information about a specific reservation",
                  "parameters": [
                    {
                      "in": "path",
                      "name": "id",
                      "schema": {
                        "type": "string"
                      },
                      "required": true,
                      "description": "The ID of the reservation",
                      "example": "res123"
                    }
                  ],
                  "responses": {
                    "200": {
                      "description": "Reservation details",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/Reservation"
                          }
                        }
                      }
                    },
                    "404": {
                      "description": "Reservation not found"
                    },
                    "500": {
                      "description": "Server error"
                    }
                  }
                },
                "put": {
                  "summary": "Update a reservation",
                  "description": "Update details of an existing reservation",
                  "parameters": [
                    {
                      "in": "path",
                      "name": "id",
                      "schema": {
                        "type": "string"
                      },
                      "required": true,
                      "description": "The ID of the reservation",
                      "example": "res123"
                    }
                  ],
                  "requestBody": {
                    "required": true,
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/NewReservation",
                          "examples": {
                            "example-1": {
                              "summary": "Update reservation",
                              "value": {
                                "activity_id": "act123",
                                "guest_name": "John Doe",
                                "reservation_date": "2024-07-20",
                                "number_of_guests": 4,
                                "special_requests": "Near the stage"
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "responses": {
                    "200": {
                      "description": "Reservation updated",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/Reservation"
                          }
                        }
                      }
                    },
                    "400": {
                      "description": "Invalid request"
                    },
                    "404": {
                      "description": "Reservation not found"
                    },
                    "500": {
                      "description": "Server error"
                    }
                  }
                },
                "delete": {
                  "summary": "Delete a reservation",
                  "description": "Cancel a reservation for a leisure activity",
                  "parameters": [
                    {
                      "in": "path",
                      "name": "id",
                      "schema": {
                        "type": "string"
                      },
                      "required": true,
                      "description": "The ID of the reservation",
                      "example": "res123"
                    }
                  ],
                  "responses": {
                    "204": {
                      "description": "Reservation deleted"
                    },
                    "404": {
                      "description": "Reservation not found"
                    },
                    "500": {
                      "description": "Server error"
                    }
                  }
                }
              }
            },
            "components": {
              "schemas": {
                "Activity": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "The unique identifier for the activity",
                      "example": "act123"
                    },
                    "name": {
                      "type": "string",
                      "description": "The name of the activity",
                      "example": "Central Park Bike Tour"
                    },
                    "city": {
                      "type": "string",
                      "description": "The city where the activity is located",
                      "example": "New York"
                    },
                    "address": {
                      "type": "string",
                      "description": "The address of the activity",
                      "example": "Central Park, New York, NY, USA"
                    },
                    "category": {
                      "type": "string",
                      "description": "The category of the activity",
                      "example": "Outdoor"
                    },
                    "description": {
                      "type": "string",
                      "description": "A detailed description of the activity",
                      "example": "A guided bike tour through Central Park."
                    },
                    "price": {
                      "type": "number",
                      "format": "float",
                      "description": "The price of the activity per person",
                      "example": 45
                    },
                    "rating": {
                      "type": "number",
                      "format": "float",
                      "description": "The rating of the activity",
                      "example": 4.5
                    },
                    "duration": {
                      "type": "string",
                      "description": "The duration of the activity",
                      "example": "2 hours"
                    },
                    "images": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "A list of image URLs of the activity",
                      "example": [
                        "https://example.com/images/central-park-bike-tour-1.jpg",
                        "https://example.com/images/central-park-bike-tour-2.jpg"
                      ]
                    },
                    "availability": {
                      "type": "object",
                      "properties": {
                        "date": {
                          "type": "string",
                          "format": "date",
                          "description": "The date of the activity",
                          "example": "2024-07-15"
                        },
                        "available_slots": {
                          "type": "integer",
                          "description": "The number of available slots for the specified date",
                          "example": 10
                        }
                      }
                    }
                  }
                },
                "NewReservation": {
                  "type": "object",
                  "properties": {
                    "activity_id": {
                      "type": "string",
                      "description": "The ID of the activity being reserved",
                      "example": "act123"
                    },
                    "guest_name": {
                      "type": "string",
                      "description": "The name of the guest making the reservation",
                      "example": "John Doe"
                    },
                    "reservation_date": {
                      "type": "string",
                      "format": "date",
                      "description": "The date for the reservation",
                      "example": "2024-07-15"
                    },
                    "number_of_guests": {
                      "type": "integer",
                      "description": "The number of guests for the reservation",
                      "example": 4
                    },
                    "special_requests": {
                      "type": "string",
                      "description": "Any special requests for the reservation",
                      "example": "Near the stage"
                    }
                  },
                  "required": [
                    "activity_id",
                    "guest_name",
                    "reservation_date",
                    "number_of_guests"
                  ]
                },
                "Reservation": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "The unique identifier for the reservation",
                      "example": "res123"
                    },
                    "activity_id": {
                      "type": "string",
                      "description": "The ID of the activity being reserved",
                      "example": "act123"
                    },
                    "guest_name": {
                      "type": "string",
                      "description": "The name of the guest making the reservation",
                      "example": "John Doe"
                    },
                    "reservation_date": {
                      "type": "string",
                      "format": "date",
                      "description": "The date for the reservation",
                      "example": "2024-07-15"
                    },
                    "number_of_guests": {
                      "type": "integer",
                      "description": "The number of guests for the reservation",
                      "example": 4
                    },
                    "special_requests": {
                      "type": "string",
                      "description": "Any special requests for the reservation",
                      "example": "Near the stage"
                    }
                  }
                }
              }
            }
          } ,
        "apiArtifacts": {
            "apiImages": {
                "api-landing-page-image": "https://devportal-content.s3.amazonaws.com/ACBOrganization/resources/images/leisure.jpeg",
                "api-detail-page-image": "https://devportal-content.s3.amazonaws.com/ACBOrganization/resources/images/leisure-mini.jpeg"
            }
        }
    },
    "serverUrl": {
        "sandboxUrl": "https://leisure.api.sandbox.abc.com",
        "productionUrl": "https://leisure.api.abc.com"
    }
}